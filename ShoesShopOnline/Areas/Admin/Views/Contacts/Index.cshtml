@model IEnumerable<ShoesShopOnline.Models.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách Contact</h2>
@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<style>
    td a:first-child {
        background: #2f4f4f;
        color: #FFF;
        border: none;
        padding: 10px;
        border-radius: 10px;
    }
    td a:last-child {
        background: #FF6347;
        color: #fff;
        border: none;
        padding: 10px;
        border-radius: 10px;
    }
</style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateContact)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateContact)
            </td>
            <td>
                
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ContactID }) |
                
                @Html.ActionLink("Xóa", "Delete", new { id = item.ContactID })
            </td>
        </tr>
    }

</table>
